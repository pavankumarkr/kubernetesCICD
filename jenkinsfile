pipeline {
    agent any
    environment { 
        registry = "mytechnicallearning1/mynodeapp" 
        registryCredential = 'dockerhub' 
        dockerImage = '' 
    }
          
    stages{
        stage('Build Docker Image'){
            steps{
                sh "sudo docker build . -t my/nodeapp:${tag}"
            }
        }
        stage('Nexus Push'){
            steps{
                    sh "sudo docker login -u mytechnicallearning1 -p mytechnicallearning1@"
                    sh "sudo docker push my/nodeapp:${tag}"
                
            }
        }
        
    }
}


