pipeline {
    agent any

    parameters {
        string(
                name: 'tag',
                defaultValue: '1',
                description: 'dockebuildtag')
    }            

    stages{
        stage('Build Docker Image'){
            steps{
                sh "sudo docker build . -t my/nodeapp:${tag}"
            }
        }
        stage('Nexus Push'){
            steps{
                withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                    sh "sudo docker login -u admin -p ${dockerhub}"
                    sh "sudo docker push my/nodeapp:${DOCKER_TAG}"
                }
            }
        }
        
    }
}


